{% extends "layout.njk" %}

{% block content %}

<div class="card">
    <section class="avatar" style="background: url({{member.avatar_url}}) no-repeat center center / cover"></section>
    <section class="details">
        <h3>Details</h3>

        <div class="item">
            <div>member</div>
            <div>{{member.name}}</div>
        </div>

        <div class="item">
            <div>Age</div>
            <div>{{member.age}}</div>
        </div>

        <div class="item">
            <div>Gender</div>
            <div>{{"Male" if member.gender == "M" else "Female"}}</div>
        </div>

        <div class="item">
            <div>Specialty</div>
            <div>
                {% for service in member.services %}
                <span>{{service}}</span>
                {% endfor %}
            </div>
        </div>

        <div class="item">
            <div>Since</div>
            <div>{{member.created_at}}</div>
        </div>

        <a href="/members/{{member.Id}}/edit" class="button">Editar</a>

    </section>
</div>

{% endblock content %}