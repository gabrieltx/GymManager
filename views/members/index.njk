{% extends "layout.njk" %}

{% block content %}

<div class="card table-container">
    <a href="/members/create">New</a>
    <table width="100%">
        <thead>
            <tr>
                <th>Member</th>
                <th>Specialty</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {% for member in members %}
            <tr>
                <td>
                <span style="background-image: url({{member.avatar_url}})"></span>
                {{member.name}}</td>
                <td>
                    <span>{{member.services}}</span>
                </td>
                <td><a href="/members/{{member.Id}}">Show</a></td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

{% endblock content %}